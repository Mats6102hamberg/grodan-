generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id          String       @id @default(cuid())
  email       String       @unique
  name        String?
  image       String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  accounts    Account[]
  sessions    Session[]
  memberships Membership[]
  preferences Json?
  profile     Profile?
  reminders   Reminder[]
  queries     Query[]
  Memory      Memory[]
}

model Profile {
  id        String  @id @default(cuid())
  userId    String  @unique
  user      User    @relation(fields: [userId], references: [id])
  bio       String?
  roleHints String? // freeform text about user's profession, skills
}

model Organization {
  id        String       @id @default(cuid())
  name      String
  createdAt DateTime     @default(now())
  members   Membership[]
  publicQAs PublicQA[]
  Query     Query[]
}

model Membership {
  id        String       @id @default(cuid())
  userId    String
  orgId     String
  role      String       @default("member")
  createdAt DateTime     @default(now())
  user      User         @relation(fields: [userId], references: [id])
  org       Organization @relation(fields: [orgId], references: [id])

  @@unique([userId, orgId])
}

model Query {
  id         String        @id @default(cuid())
  userId     String
  orgId      String?
  input      String
  complexity Int // 1..4 -> which agent tier we used
  createdAt  DateTime      @default(now())
  user       User          @relation(fields: [userId], references: [id])
  org        Organization? @relation(fields: [orgId], references: [id])
  answer     Answer?
}

model Answer {
  id        String   @id @default(cuid())
  queryId   String   @unique
  output    String
  model     String
  tokensIn  Int?
  tokensOut Int?
  createdAt DateTime @default(now())
  query     Query    @relation(fields: [queryId], references: [id])
}

model PublicQA {
  id        String        @id @default(cuid())
  orgId     String?
  question  String
  answer    String
  createdAt DateTime      @default(now())
  org       Organization? @relation(fields: [orgId], references: [id])
  embedding Float[]
}

model Memory {
  id        String   @id @default(cuid())
  userId    String
  title     String?
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  embedding Float[]

  user User @relation(fields: [userId], references: [id])
}

model Reminder {
  id        String   @id @default(cuid())
  userId    String
  dueAt     DateTime
  title     String
  payload   Json?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
